<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Explora" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/turquoise</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/turquoise</item>
        <item name="colorOnSecondary">@color/black</item>
<!--color of status bar matching apps theme-->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
<!--reusable styles to not repeat the same thing-->
    <style name="ExploraTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
<!--buttons-->
    <style name="ExploraMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
<!--textviews-->
    <style name="ExploraTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">16sp</item>
    </style>
<!--headers-->
    <style name="ExploraHeaderText" parent="ExploraTextView">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#252525</item>
    </style>
</resources>